
@{
    ViewBag.Title = "Admin Login";    
}

<div class="col-md-12" style="margin-top:-50px">
    <section class="company-description">

        <div class="col-md-12" ng-controller="BannerController as vmBanner">
            <div class="wow fadeInLeft" data-wow-delay=".3s">
                <img ng-src="{{ vmBanner.bannerUrl != null ? vmBanner.bannerUrl : 'http://tfgdb.com/NoArtwork/NoBanner.png' }}" alt="" class="img-responsive" style="height:150px;width:1300px">
            </div>
        </div>


        <div class="col-md-offset-3 col-md-6 wow fadeInLeft" data-wow-delay=".3s">
            
            <section id="contact-section" style="padding:0px">
                <div class="block">
                    <div class="contact-form">
                        <form id="contact-form" onsubmit="adminLoginOnSubmit()" role="form">
                            <div class="form-group">
                                <input type="text" placeholder="Username" class="form-control" name="username" id="username">
                            </div>

                            <div class="form-group">
                                <input type="password" placeholder="Password" class="form-control" name="password" id="password">
                            </div>
                            <center>
                                <input type="submit" id="contact-submit" class="btn btn-default btn-send" value="Login">
                            </center>
                            <br /><br /><br />
                        </form>

                    </div>
                </div>
            </section>


        </div>

    </section>
    
</div>



