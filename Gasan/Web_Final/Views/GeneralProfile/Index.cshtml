
@{
    ViewBag.Title = "General Profile";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 bhoechie-tab-container">
            <div class="col-md-2 bhoechie-tab-menu">
                <div class="list-group">
                    <a href="#" class="list-group-item active text-center">
                        <h4 class="glyphicon glyphicon-list-alt"></h4><br />Historical Background
                    </a>
                    <a href="#" class="list-group-item text-center">
                        <h4 class="glyphicon glyphicon-user"></h4><br />Profile
                    </a>
                    <a href="#" class="list-group-item text-center">
                        <h4 class="glyphicon glyphicon-adjust"></h4><br />Official Seal
                    </a>
                    <a href="#" class="list-group-item text-center">
                        <h4 class="glyphicon glyphicon-book"></h4><br />Mission / Vision
                    </a>
                </div>
            </div>
            <div class="col-md-10 bhoechie-tab">

                <!--///////////////////////////HISTORICAL BACKGROUND//////////////////////////////////-->
                <div class="bhoechie-tab-content active" ng-controller="HistoryController as vmHistory">
                    <h3>Historical Background</h3>             
                    <div class="col-md-12" ng-repeat="history in vmHistory.histories">
                        <hr />
                        <div class="col-md-2">
                            <div class="">
                                <img ng-src="{{ history.imageUrl != null ? history.imageUrl : 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/300px-No_image_available.svg.png' }}" alt="" style="height:100px; width:100px; margin-top:25px">
                            </div>
                        </div>

                        <div class="col-md-10">       
                            <h3 ng-bind="history.title"></h3>                     
                            <p ng-bind="history.description"></p>                            
                        </div>
                    </div>
                </div>
                <!--///////////////////////////PROFILE//////////////////////////////////-->
                <div class="bhoechie-tab-content">
                    <h3>Profile of the Municipality</h3>
                    <div class="col-md-offset-11">                        
                    </div>

                    <div class="col-md-12">
                        <hr />                        
                        <div class="col-md-12">
                            <h3>PHYSICAL ATTRIBUTES</h3>
                            <p>
                                Descriptions Descriptions Descriptions Descriptions Descriptions
                                Descriptions Descriptions Descriptions Descriptions Descriptions
                                Descriptions Descriptions Descriptions Descriptions Descriptions
                            </p>                            
                        </div>
                    </div>                   
                </div>

                <!--///////////////////////////OFFICIAL SEAL//////////////////////////////////-->
                <div class="bhoechie-tab-content">
                    <h3>Official Seal</h3>

                    <div class="col-md-12">
                        <hr />
                        <div class="col-md-2">
                            <div class="">
                                <img src="~/images/childrens-park-646x401.jpg" alt="" style="height:100px; width:100px; margin-top:25px">
                            </div>
                        </div>

                        <div class="col-md-10">
                            <h4>Shield</h4>
                            <p>
                                Derived from the provincial seal of Marinduque where the town is located.
                            </p>
                        </div>

                        <div class="col-md-10">
                            <h4>COCONUT TREE</h4>
                            <p>
                                Represents the main source of income of the municipality.
                            </p>
                        </div>
                    </div>

                </div>

                <!--///////////////////////////MISSION/VISION//////////////////////////////////-->
                <div class="bhoechie-tab-content">
                    <h3>Mission and Vision</h3>                    
                    <div class="col-md-12">
                        <hr />                        
                        <div class="col-md-10">
                            <h3>Mission</h3>                            
                            <p id="mission-details"></p>                            
                        </div>
                    </div>

                    <div class="col-md-12">
                        <hr />                        
                        <div class="col-md-10">
                            <h3>Vision</h3>                            
                            <p id="vision-details"></p>                            
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/Main/mission_vision_main.js"></script>
